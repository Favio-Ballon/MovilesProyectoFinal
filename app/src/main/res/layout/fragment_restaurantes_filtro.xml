<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/transparent"
    android:padding="16dp"
    tools:context=".ui.fragment.RestaurantesFiltroFragment">

    <!-- EditText for city input -->

    <!-- Button for selecting date -->
    <EditText
        android:id="@+id/editTextCity"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="16dp"
        android:hint="Introduce la ciudad"
        android:inputType="text"
        android:padding="10dp" />

    <Button
        android:id="@+id/buttonSelectDate"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/editTextCity"
        android:layout_marginBottom="16dp"
        android:padding="10dp"
        android:text="Seleccionar Fecha" />

    <!-- Button for selecting time -->
    <Button
        android:id="@+id/buttonSelectTime"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/buttonSelectDate"
        android:layout_marginBottom="16dp"
        android:padding="10dp"
        android:text="Seleccionar Hora" />

    <!-- Button for search -->
    <Button
        android:id="@+id/buttonSearch"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/buttonSelectTime"
        android:padding="10dp"
        android:text="Buscar" />

</RelativeLayout>
