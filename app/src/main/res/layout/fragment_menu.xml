<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.fragment.MenuFragment">

    <ImageView
        android:id="@+id/imgLoading"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:src="@drawable/loading"
        android:visibility="gone"
        android:layout_centerInParent="true" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_above="@+id/btnGuardarComida">

        <androidx.recyclerview.widget.RecyclerView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/rv_menu_categoria" />

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/rv_menu_plato"
            android:layout_width="match_parent"
            android:layout_height="485dp" />

    </LinearLayout>

    <Button
        android:id="@+id/btnCrearCategoria"
        android:visibility="visible"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Crear Categoria"
        android:layout_alignBottom="@+id/btnGuardarComida"
        android:layout_marginBottom="60dp" />

    <Button
        android:id="@+id/btnGuardarComida"
        android:visibility="visible"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Guardar"
        android:layout_alignParentBottom="true" />

</RelativeLayout>
